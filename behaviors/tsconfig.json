{
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@server/*": [
        "../src/server/*"
      ],
      "@store/*": [
        "../src/store/*"
      ],
      "@view/*": [
        "../src/view/*"
      ]
    },
  },
  "include": [
    "./**/*",
    "../types/*"
  ],
  "references": [
    { "path": "../" }
  ]
}